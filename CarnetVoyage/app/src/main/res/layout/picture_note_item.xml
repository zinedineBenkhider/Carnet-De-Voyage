<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" android:padding="10dp" >


    <ImageView android:id="@+id/picture_url_item"
        android:contentDescription="row"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:textColor="@android:color/black"
        />
    <TextView android:id="@+id/picture_place_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginLeft="80dp"
        android:textStyle="bold"
        />
    <TextView android:id="@+id/picture_tag_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginLeft="80dp"
        android:layout_below="@+id/picture_place_item"
        />

    <TextView android:id="@+id/picture_date_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginLeft="80dp"
        android:layout_below="@+id/picture_tag_item"
        />


</RelativeLayout>
